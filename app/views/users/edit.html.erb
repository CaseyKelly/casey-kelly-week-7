<h2>Edit User</h2>
<%= form_for @user do |f| %>
<p>
  <%= f.label :user_name %>
  <%= f.text_field :user_name %>
  <p>
    <%= f.label :about %>
    <%= f.text_field :about %>
    <p>
      <% if current_user == nil %>
      <%= f.label :password %>
      <%= f.password_field :password %>
      <p>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
        <% end %>
        <p>
          <%= f.submit 'Login!' %>
          <% end %>
