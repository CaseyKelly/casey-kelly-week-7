<h1>Users</h1>

<p>

<table border='1'>
  <thead>
    <tr>
      <th>Username</th>
      <th>About</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.user_name, user_path(user) %></td>
      <td><%= user.about %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %>
        <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<p>
