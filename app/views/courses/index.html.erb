<h1>Courses</h1>

<p>
  <%= link_to 'Add a course', new_course_path %>

<p>
<table border='1'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Day or Night</th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
    <tr>
      <td><%= link_to course.title, course_path(course) %></td>

      <td><% if course.daytime == true %> <%= 'Day' %> <% else %> <%= 'Night' %> <% end %></td>

      <td>
        <div class="text-right">
          <%= link_to 'Edit', edit_course_path(course) %>
          <%= link_to 'Delete', course, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
